<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= house.apartmentInfo.apartmentName %> - Booking Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
  <style>
    /* Custom styles */
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }
    .carousel img { 
      height: 500px; 
      object-fit: cover; 
      border-radius: 8px; 
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }
    .container {
      background-color: #fff;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
    }
    h2, h3, h4 {
      color: #007bff;
      margin-top: 1rem;
    }
    .feature-category {
      margin-top: 20px;
      padding: 1rem;
      background-color: #f8f9fa;
      border-radius: 8px;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.05);
    }
    .feature-category h4 {
      font-size: 1.1rem;
      font-weight: bold;
      color: #343a40;
    }
    .feature-list {
      list-style: none;
      padding: 0;
      margin-top: 10px;
    }
    .feature-list li {
      display: flex;
      align-items: center;
      font-size: 0.95rem;
      color: #555;
      margin-bottom: 8px;
    }
    .feature-list li i {
      color: #28a745;
      margin-right: 8px;
    }
    .accordion-button {
      background-color: #e9ecef;
      font-weight: bold;
    }
    .accordion-body {
      background-color: #fdfdfd;
      border-radius: 5px;
    }
    .carousel-control-prev-icon, .carousel-control-next-icon {
      background-color: #007bff;
      border-radius: 50%;
    }
  </style>
</head>
<body>

<div class="container my-5">
  <!-- Carousel for Images -->
  <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% house.images.forEach((image, index) => { %>
        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
          <img src="<%= image %>" class="d-block w-100" alt="House Image">
        </div>
      <% }) %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
    </button>
  </div>

  <!-- House Information -->
  <h2 class="mt-4"><%= house.apartmentInfo.apartmentName %></h2>
  <p><strong>Owner:</strong> <%= house.partnerName %> <%= house.partnerLastName %></p>
  <p><strong>Phone Number:</strong> <%= house.phoneNumber %></p>
  <p><strong>Location:</strong> <%= house.city %>, <%= house.neighborhood %></p>
  <p><strong>Type:</strong> <%= house.type %> - <%= house.nightmonth === 'night' ? 'Per Night' : 'Per Month' %></p>
  <p><strong>Furniture:</strong> <%= house.furniture === 'true' ? 'Furnished' : 'Unfurnished' %></p>
  <p><strong>Price:</strong> $<%= house.apartmentInfo.price %></p>
  <a href="<%= house.apartmentInfo.position %>" target="_blank" class="btn btn-primary btn-sm mt-2">View on Map</a>

  <!-- Features List -->
  <h3 class="mt-4">Features</h3>
  <div class="features-section row">
    <% for (let category in house.features) { %>
      <div class="col-md-4 feature-category">
        <h4><i class="bi bi-house"></i> <%= category %></h4>
        <ul class="feature-list">
          <% house.features[category].forEach(feature => { %>
            <li><i class="bi bi-check-circle"></i> <%= feature %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  </div>

  <!-- Rooms Details -->
  <h3 class="mt-4">Rooms</h3>
  <div class="row">
    <% house.rooms.forEach(room => { %>
      <div class="col-md-6 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= room.typee %></h5>
            <p class="card-text"><%= room.description %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Nearby Environment -->
  <h3 class="mt-4">Nearby Places</h3>
  <div class="features-section row">
    <% for (let category in house.environment) { %>
      <div class="col-md-4 feature-category">
        <h4><i class="bi bi-geo-alt"></i> <%= category %></h4>
        <ul class="feature-list">
          <% house.environment[category].forEach(place => { %>
            <li><i class="bi bi-check-circle"></i> <%= place.title %> - <%= place.distance %> km</li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  </div>


<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
